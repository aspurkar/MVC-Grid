@{
    ViewBag.Title = "All Students";
}
<style>
    table td {
        border:solid thin gray
    }
</style>
@using MvcGrid.Models
@model IEnumerable<Student>
<h2>List of all Students</h2>
@if(Model.Count()>0)
{
<table>
    <tr>
        <td>Student Id
        </td>
        <td>Name
        </td>
        <td>Email
        </td>
        <td>Mobile
        </td>
        <td>City
        </td>
        <td>Edit
        </td>
         <td>Delete
        </td>
    </tr>

    @foreach (var stud in Model)
    {
        <tr>
            <td>
                @stud.StudentId
            </td>
            <td>
                @Html.ActionLink(stud.Name, "view", new { studentid = stud.StudentId })
            </td>
            <td>
                @stud.Email
            </td>
            <td>
                @stud.Mobile
            </td>
            <td>
                @stud.City
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { studentid = stud.StudentId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { studentid = stud.StudentId })
            </td>
        </tr>
    }
</table>
}
else 
{
    <p>No records yet..</p>
}
 <p>
        @Html.ActionLink("Add Student", "addstudent")
 </p>